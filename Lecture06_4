fun main(args:Array<String>) {
    //Operators
    /*
     * Arithmetic(+,-,*,/,%)
     * Relational(>,<,>=,<=,==,!=)
     * Assignment(+=, -=, *=, /=, %=)(just like python)
     * Unary(+,-,++,--,!)
     * Logical(&&,||,!)
     * Bitwise(shl-shift left, shr, ushr- unsigned shr, and, or, xor, inv)
    */
    var a = 10
    var b = 20
    val isTrue = true
    val isFalse = false
    val add = a + b
    
    //arithmetic operators
    println("Arithmetic Operators")
    println("Addition: $a + $b = $add")
    println("Subtraction: $a - $b = ${a-b}")
    println("Multiplication: $a  * $b = ${a*b}")
    println("Division: $a / $b = ${a/b}")
    println("Modulo: $a % $b = ${a%b}\n")
    
    //relational operator
    val isEqual = a==b
    println("Relational Operators")
    println("$a == $b: $isEqual")
    println("$a != $b: ${a!=b}")
    println("$a > $b: ${a>b}")
    println("$a < $b: ${a<b}")
    println("$a >= $b: ${a>=b}")
    println("$a <= $b: ${a<=b}\n")
    
    //assignment operators
    println("Assignment operators")
    print("$a += $b: ")
    a += b
    print("$a\n")
    print("$a -= $b: ")
    a -= b
    print("$a\n")
    print("$a *= $b: ")
    a *= b
    print("$a\n")
    print("$a /= $b: ")
    a /= b
    print("$a\n")
    print("$a %= $b: ")
    a %= b
    print("$a\n\n")
    
    //unary operators
    println("Unary Operators")
    print("+$a : ")
    +a
    print("$a\n")
    print("-$a : ")
    -a
    print("$a\n")
    print("++$a : ")
    ++a
    print("$a\n")
    print("--$a : ")
    --a
    print("$a\n\n")
    
    //logical operators
    println("Logical Operators")
    val a1 = true;
    val b1 = false;
    println("$a1 && $b1: ${a1&&b1}")
    println("$a1 || $b1: ${a1||b1}")
    println("!$a1: ${!a1}\n")
    
    //bitwise operators
    println("Bitwise Operators")
    var c1= a shl 2
    println("$a shl 2: $c1")
    c1= a shr 2
    println("$a shr 2: $c1")
    c1= a ushr 2
    println("$a ushr 2: $c1")
//     c1= a ushl 2						//there is no ushl in kotlin
//     println("$a ushl 2: ${c1}")
    println("$a and $b: ${a and b}")
    println("$a or $b: ${a or b}")
    println("$a xor $b: ${a xor b}")
    println("$a .inv(): ${a.inv()}")
}
